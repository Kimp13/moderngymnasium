<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/inbox_view_holder_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/miniSize">

    <include layout="@layout/base_announcement_view_holder" />

    <TextView
        android:id="@+id/announcementCardExpandTextView"
        style="@style/AppTextViewButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/announcementCardText"
        android:text="@string/expand_text" />

    <TextView
        style="@style/IconTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/announcementCardExpandTextView"
        android:layout_alignParentEnd="true"
        app:drawableStartCompat="@drawable/ic_baseline_comment" />
</RelativeLayout>