<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/commentImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/clickable_background_borderless_inverse"
        android:contentDescription="@string/comment"
        android:src="@drawable/ic_baseline_person_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/commentAuthorName"
        style="@style/AnnouncementAuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/commentImageView"
        app:layout_constraintTop_toTopOf="@id/commentImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        style="@style/AnnouncementTextTextView"
        app:layout_constraintStart_toEndOf="@id/commentAuthorName"
        app:layout_constraintBaseline_toBaselineOf="@id/commentAuthorName" />

    <TextView
        android:id="@+id/commentText"
        style="@style/AnnouncementTextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>