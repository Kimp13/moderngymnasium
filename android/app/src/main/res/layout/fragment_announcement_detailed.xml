<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    tools:context=".ui.fragments.detailedAnnouncement.DetailedAnnouncementFragment">

    <Button
        android:id="@+id/announcementDetailedBackButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/close_button_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/announcementDetailedTopLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/announcement_detailed_activity_action_bar_title"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/announcementDetailedBackButton"
        app:layout_constraintStart_toEndOf="@id/announcementDetailedBackButton"
        app:layout_constraintTop_toTopOf="@id/announcementDetailedBackButton" />

    <ImageView
        android:id="@+id/announcementDetailedImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_announcement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/announcementDetailedBackButton"
        app:tint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/announcementDetailedAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toEndOf="@id/announcementDetailedImageView"
        app:layout_constraintTop_toTopOf="@id/announcementDetailedImageView" />

    <TextView
        android:id="@+id/announcementDetailedAuthorRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/announcementDetailedImageView"
        app:layout_constraintStart_toStartOf="@id/announcementDetailedAuthorName" />

    <TextView
        android:id="@+id/announcementDetailedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/announcementDetailedImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>