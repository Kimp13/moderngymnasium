<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorSurface">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSurface">@color/inverseVariant</item>
        <item name="colorOnSecondary">@color/primary</item>
        <item name="colorOnPrimary">@color/inverse</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="cardViewStyle">@style/AppMaterialCardViewStyle</item>
        <item name="materialCardViewStyle">@style/AppMaterialCardViewStyle</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppThemeWithoutActionBar" parent="AppTheme">s
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeWithActionBar" parent="AppTheme">
        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>
    </style>

    <style name="ActionBarOverlay">
        <item name="colorOnPrimary">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="background">?attr/colorSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
    </style>

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AppMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:padding">@dimen/size</item>
    </style>

    <style name="AppTextViewButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">.03</item>
    </style>

    <style name="CreateCommentEditTextStyle" parent="AppEditTextStyle">
        <item name="android:padding">@dimen/size</item>
    </style>

    <style name="AppTextButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AppEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@drawable/edit_text_text_color</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">@dimen/kiloSize</item>
    </style>

    <style name="AppBottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">@dimen/bottomNavElevation</item>
        <item name="itemBackground">@drawable/bottom_navigation_ripple</item>
        <item name="itemIconTint">@drawable/bottom_navigation_view_color</item>
        <item name="itemTextColor">@drawable/bottom_navigation_view_color</item>
        <item name="android:paddingStart">@dimen/bottomNavHorizontalPadding</item>
        <item name="android:paddingEnd">@dimen/bottomNavHorizontalPadding</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:buttonBarButtonStyle">@style/AppTextButtonStyle</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
    </style>

    <style name="AnnouncementAuthorTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="AnnouncementAuthorRankTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AnnouncementTextTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="IconTextButton">
<!--        <item name="android:background">@drawable/icon_text_button_background</item>-->
<!--        <item name="android:clickable">true</item>-->
        <item name="android:drawablePadding">@dimen/iconButtonPadding</item>
        <item name="drawableTint">?attr/colorOnSurface</item>
<!--        <item name="android:focusable">true</item>-->
        <item name="android:padding">@dimen/iconButtonPadding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CommentsHeaderTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommentsCountTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ClickableInverseBackground">
        <item name="android:background">@drawable/clickable_background_borderless_inverse</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:popupBackground">@drawable/create_comment_popup_background</item>
    </style>
</resources>